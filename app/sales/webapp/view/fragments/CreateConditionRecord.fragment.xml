<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog
    id="createConditionDialog"
    title="Create Condition Record"
    draggable="true"
    resizable="true">

    <VBox class="sapUiSmallMargin">
      <Label text="Condition Type" required="true"/>
      <Input
        id="conditionTypeInput"
        showValueHelp="true"
        valueHelpRequest=".onValueHelpRequest"/>
    </VBox>

    <beginButton>
      <Button text="Submit" type="Emphasized" press=".onSubmitCreateRecord"/>
    </beginButton>

    <endButton>
      <Button text="Cancel" press=".onCancelCondition"/>
    </endButton>
    
  </Dialog>
</core:FragmentDefinition>
